@model Product



<form asp-controller="Admin" asp-action="AddProduct" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <h1> Add Product </h1>
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input class="form-control" asp-for="Title" required />
        <span asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input class="form-control" asp-for="Price"  required />
        <span asp-validation-for="Price"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tax">Tax</label>
        <input class="form-control" asp-for="Tax" required />
        <span asp-validation-for="Tax"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ads">Ads</label>
        <input class="form-control" asp-for="Ads" required />
        <span asp-validation-for="Ads"></span>
    </div>

    <div class="form-group">
        <label asp-for="Discount">Discount</label>
        <input class="form-control" asp-for="Discount" required />
        <span asp-validation-for="Discount"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <input class="form-control" asp-for="Quantity" required />
        <span asp-validation-for="Quantity"></span>
    </div>


    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-select" aria-label="Default select example">
            <option value="">Select a category</option>
            @{
                foreach (var i in ViewBag.Categories)
                {
                    <option value="@i.Id"> @i.Name </option>
                }
            }

        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>
    
 
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>