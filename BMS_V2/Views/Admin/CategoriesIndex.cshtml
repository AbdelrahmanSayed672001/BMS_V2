@model List<Category>


<a class="btn btn-primary" href="/Admin/AddCategory">Add</a>

<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			
		</tr>
	</thead>
	<tbody>

		@if (Model.Count == 0)
		{
			<div class="text-danger"> Not found any categories yet </div>
		}
		else
		{

			foreach (var item in Model)
			{
				<tr>
					<th scope="row"></th>
					<td>@item.Name</td>
				</tr>
			}


		}


	</tbody>
</table>